<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:padding="5dp"
    tools:context="com.teamX.projetx.user.LoginActivity"

    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <!-- Login progress -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:weightSum="0.70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="13dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            app:srcCompat="@drawable/ak47" />

        <LinearLayout
            android:layout_width="@dimen/input_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextNickname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/black"
                android:backgroundTintMode="add"
                android:elevation="1dp"
                android:ems="10"
                android:hapticFeedbackEnabled="false"
                android:hint="Pseudo"
                android:singleLine="false"
                android:soundEffectsEnabled="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:theme="@android:style/Theme.Translucent" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="@dimen/input_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/black"
                android:backgroundTintMode="add"
                android:elegantTextHeight="false"
                android:elevation="1dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:theme="@android:style/Theme.Translucent" />

            <Button
                android:id="@+id/buttonLogin"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="?android:attr/colorActivatedHighlight"
                android:elevation="0dp"
                android:text="Connexion"
                android:textAllCaps="false"
                android:textColorHint="@android:color/background_light"
                android:textColorLink="@color/colorPrimary" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:indeterminate="true"
                android:indeterminateTint="?android:attr/colorActivatedHighlight"
                android:paddingTop="7dp"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Pas encore inscrit ? :"
                android:textAlignment="textEnd" />

            <Button
                android:id="@+id/buttonRegister"
                style="@android:style/Widget.Material.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="Inscription"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
